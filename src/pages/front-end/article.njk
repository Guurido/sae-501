{% extends "layouts/front-end/base.njk" %}
{% block title %}Auteurs{% endblock %}
{% set bubble_color = "gris" %}


{% block main %}
<h1 class="text-3xl font-bold mb-4">{{ article.title }}</h1>
<section class="paragraphe">
    <div class="text-container">
        <h2 class="titre">{{ item.lastname }} {{ item.firstname }}</h2>
        <p class="pres">{{ item.bio }}</p>
        <img src="{{'/uploads/'~item.image }}" alt="photo de {{ item.firstname }}" class="imgPres">
    </div>
</section>
{% endblock %}
