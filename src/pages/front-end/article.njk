{% extends "layouts/front-end/base.njk" %}
{% block title %}Article{% endblock %}
{% set bubble_color = "gris" %}

{% block styles %}
<link rel="stylesheet" href="/styles/article.css">
{% endblock %}

{% block main %}

<div class="container">
    <h1 class="font-bold break-normal text-3xl md:text-5xl title">{{ article.title }}</h1>
    <figure>
        <img class="image" src="{{ '/uploads/' ~ article.image }}" alt="">
    </figure>
    <p class="abstract">{{ article.abstract }}</p>
    <p class="content">{{ article.content }}</p>
</div>
{% endblock %}
